<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="220dp">

    <ImageView
        android:id="@+id/iv_login_user_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/dummy_news_4"
        android:scaleType="centerCrop"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#A000"/>

    <ImageView
        android:id="@+id/iv_login_user"
        android:layout_width="@dimen/logo_size"
        android:layout_height="@dimen/logo_size"
        android:src="@drawable/login_user_image"
        android:layout_margin="@dimen/margin_xlarge"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Harry Harry"
        android:layout_toRightOf="@id/iv_login_user"
        android:layout_alignTop="@id/iv_login_user"
        android:textColor="@color/white_full"
        android:textSize="@dimen/text_regular_2x" />

    <TextView
        android:id="@+id/tv_phone_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="09978071892"
        android:layout_alignLeft="@id/tv_name"
        android:layout_below="@id/tv_name"
        android:textColor="@color/white_full"
        android:layout_marginTop="@dimen/margin_small"
        android:textSize="@dimen/text_regular"/>

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        style="@style/AccentButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/margin_large"/>
</RelativeLayout>